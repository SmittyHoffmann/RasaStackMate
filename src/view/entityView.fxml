<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane  minHeight="-Infinity" minWidth="-Infinity"  xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EntityViewController">
    <children>
        <BorderPane  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <AnchorPane minHeight="0.0" minWidth="0.0"  BorderPane.alignment="CENTER">
                    <children>
                        <HBox  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <ChoiceBox fx:id="entityChoiceBox" prefWidth="150.0">
                                    <HBox.margin>
                                        <Insets top="15.0" />
                                    </HBox.margin>
                                </ChoiceBox>
                                <TextField fx:id="entityNameTextField" promptText="Name der neuen Entity">
                                    <HBox.margin>
                                        <Insets left="15.0" top="15.0" />
                                    </HBox.margin>
                                </TextField>
                                <Button fx:id="addEntityButton" mnemonicParsing="false" text="Entity hinzufügen">
                                    <HBox.margin>
                                        <Insets left="20.0" top="15.0" />
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="deleteEntityButton" mnemonicParsing="false" text="Entity entfernen">
                                    <HBox.margin>
                                        <Insets left="20.0" top="15.0" />
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="editEntityNameButton" mnemonicParsing="false" text="Entityname bearbeiten">
                                    <HBox.margin>
                                        <Insets left="20.0" top="15.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </top>
            <right>
                <VBox fx:id="buttonBox" BorderPane.alignment="CENTER"  prefWidth="400" alignment="TOP_CENTER">
                    <children>
                        <Button fx:id="addValueButton" mnemonicParsing="false"  text="Wert hinzufügen" alignment="CENTER">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin></Button>
                        <TextField fx:id="valueTextField" prefHeight="20.0" prefWidth="150.0">
                            <VBox.margin>
                                <Insets top="15.0" />
                            </VBox.margin>
                        </TextField>
                        <Button fx:id="deleteValueButton" mnemonicParsing="false" alignment="CENTER" text="Wert entfernen">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin></Button>
                    </children>
                </VBox>
            </right>
            <center>
                <ListView fx:id="valueListView" BorderPane.alignment="CENTER" />
            </center>
        </BorderPane>
    </children>
</AnchorPane>
